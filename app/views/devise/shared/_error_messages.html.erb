<% if resource.errors.any? %>
  <div style="background-color: #fee2e2; border: 1px solid #fca5a5; padding: 16px; border-radius: 8px; margin-bottom: 20px;">
    <h3 style="color: #b91c1c; font-weight: bold; font-size: 16px; margin-bottom: 8px;">
      There were some errors:
    </h3>
    <ul style="list-style-type: disc; padding-left: 20px; color: #b91c1c;">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
