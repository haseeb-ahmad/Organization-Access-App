<% content_for :title, "New organization" %>

<% if policy(Organization).create? %>
  <div class="md:w-2/3 w-full">
    <h1 class="font-bold text-4xl">New organization</h1>

    <%= render "form", organization: @organization %>

    <%= link_to "Back to organizations", organizations_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  </div>
<% else %>
  <div class="bg-red-100 border border-red-300 text-red-800 px-4 py-3 rounded-md">
    You are not authorized to create a new organization.
  </div>
<% end %>
