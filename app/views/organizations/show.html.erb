<% content_for :title, "Showing Organization" %>

<div class="max-w-3xl mx-auto bg-white p-6 rounded-lg shadow-md">
  <% if notice.present? %>
    <p class="py-2 px-4 bg-green-100 text-green-700 mb-4 rounded-md"><%= notice %></p>
  <% end %>

  <h1 class="text-3xl font-bold text-indigo-700 mb-4"><%= @organization.name %></h1>
  <p class="text-gray-600 mb-6"><%= @organization.description %></p>

  <div class="flex flex-wrap gap-4 mb-6">
    <% if policy(@organization).update? %>
      <%= link_to "Edit Organization", edit_organization_path(@organization),
        class: "inline-block px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded text-sm font-medium text-gray-800" %>
    <% end %>

    <% if policy(@organization).destroy? %>
      <%= button_to "Delete Organization", @organization,
        method: :delete,
        data: { turbo_confirm: "Are you sure you want to delete this organization?" },
        form_class: "inline-block",
        class: "px-4 py-2 bg-red-600 hover:bg-red-500 text-white rounded text-sm font-medium" %>
    <% end %>
  </div>

  <h2 class="text-xl font-semibold text-gray-800 mb-3">Quick Access</h2>
  <div class="grid sm:grid-cols-2 gap-4">
    <% if policy(@organization).view_spaces? %>
      <%= link_to "View Spaces", organization_spaces_path(@organization),
        class: "block px-5 py-3 bg-blue-50 hover:bg-blue-100 border border-blue-200 rounded-lg text-blue-700 text-sm font-semibold shadow-sm" %>
    <% end %>

    <% if policy(@organization).manage_rules? %>
      <%= link_to "View Rule Sets", organization_rule_sets_path(@organization),
        class: "block px-5 py-3 bg-blue-50 hover:bg-blue-100 border border-blue-200 rounded-lg text-blue-700 text-sm font-semibold shadow-sm" %>
    <% end %>

    <% if policy(@organization).analytics? %>
     <%= link_to "Analytics", analytics_organization_path(@organization),
        class: "block px-5 py-3 bg-blue-50 hover:bg-blue-100 border border-blue-200 rounded-lg text-blue-700 text-sm font-semibold shadow-sm" %>
    <%end%>

    <% if policy(@organization).manage_members? %>
      <%= link_to "Manage Members", organization_memberships_path(@organization),
        class: "block px-5 py-3 bg-blue-50 hover:bg-blue-100 border border-blue-200 rounded-lg text-blue-700 text-sm font-semibold shadow-sm" %>
    <%end%>
  </div>
</div>
