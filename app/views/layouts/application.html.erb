<!DOCTYPE html>
<html>
  <head>
    <title>OrgAccessApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-100 min-h-screen font-sans leading-relaxed text-gray-800">
    <% if user_signed_in? %>
      <!-- Navbar -->
      <nav class="bg-white shadow-md mb-6 mt-6">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between items-center h-16">
            <!-- Left side -->
            <div class="flex items-center space-x-4">
              <%if current_organization.blank?%>
                <span class="text-2xl font-bold text-indigo-600 tracking-tight">OrgAccess</span>
              <% else %>
                <%= link_to organization_path(current_organization) do %>
                  <span class="text-2xl font-bold text-indigo-600 tracking-tight">
                    <%= "#{current_organization.name.split.first} - (#{current_user.role_in(current_organization)})" %>
                  </span>
                <% end %>
              <% end %>
            </div>

            <!-- Right side -->
            <div class="flex items-center space-x-4">
              <%if current_organization.blank?%>
                <%= link_to 'Edit Profile', edit_registration_path(current_user) %>
                <span class="text-sm text-gray-600">Signed in as: <%= current_user.email %></span>
                <%= button_to "Logout", destroy_user_session_path,
                    method: :delete,
                    class: "bg-red-600 hover:bg-red-700 text-white text-sm px-4 py-2 rounded shadow-sm" %>
              <%else%>
              <div class="flex items-center space-x-2 bg-indigo-100 px-3 py-1 rounded-full">
                <%= button_to "Leave",
                  leave_organizations_path,
                  method: :delete,
                  data: { turbo_confirm: "Are you sure you want to leave this organization?" },
                  class: "text-xs text-red-600 hover:text-red-800 hover:underline" %>
              </div>
              <%end%>

            </div>
          </div>
        </div>
      </nav>
    <% end %>

    <!-- Flash messages -->
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <% if flash[:notice] %>
        <div class="bg-green-100 border border-green-300 text-green-800 px-4 py-2 rounded mb-4">
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:alert] %>
        <div class="bg-red-100 border border-red-300 text-red-800 px-4 py-2 rounded mb-4">
          <%= flash[:alert] %>
        </div>
      <% end %>
    </div>

    <!-- Page content -->
    <main class="container mx-auto px-4 sm:px-6 lg:px-8">
      <%= yield %>
    </main>
  </body>
</html>
